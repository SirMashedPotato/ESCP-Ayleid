<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RulePackDef>
		<defName>ESCP_NamerPersonAyleidMale</defName>
		<include>
		  <li>TribalWordUtility</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>name->[MaleList] [FamilyList]</li>
				<li>name(p=0.05)->[MaleList] 'the [a] [Animal]' [FamilyList]</li>
				<li>name(p=0.01)->[MaleList] 'chosen of [AyleidGods]' [FamilyList]</li>
			</rulesStrings>
			<rulesRaw>
				<li Class="Rule_File">
					<keyword>MaleList</keyword>
					<path>ESCP_AyleidNames/AyleidMale</path>
				</li>
				<li Class="Rule_File">
					<keyword>FamilyList</keyword>
					<path>ESCP_AyleidNames/AyleidFamily</path>
				</li>
			</rulesRaw>
			<rulesFiles>
				<li>a->ESCP_AyleidNames/AyleidFactionA</li>
				<li>b->ESCP_AyleidNames/AyleidFactionB</li>
				<li>c->ESCP_AyleidNames/AyleidFactionC</li>
				<li>AyleidGods->ESCP_AyleidNames/AyleidGods</li>
			</rulesFiles>
		</rulePack>
	</RulePackDef>

